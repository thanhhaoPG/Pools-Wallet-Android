<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dimen10dp"
        android:layout_marginHorizontal="@dimen/space_start_end"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.wallet.pools.presentation.widget.TvSemiBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_20"
            android:textAlignment="center"
            android:textColor="@color/color_text_black"
            android:text="@string/confirm_secret_recovery_phrase"/>
        <com.wallet.pools.presentation.widget.TvRegular
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dimen10dp"
            android:textSize="@dimen/text_size_16"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_484848"
            android:text="@string/select_each_word_in_the_order_it_was_presented_to_you"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@id/llTitle"
        android:layout_marginTop="@dimen/dimen30dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/space_start_end"
        tools:listitem="@layout/item_fill_text_phrase"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        android:background="@drawable/bg_radius_conner_gray"
        tools:itemCount="12"
        android:id="@+id/rvTextPhrase"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/space_start_end"
        app:layout_constraintTop_toBottomOf="@+id/rvTextPhrase"
        app:layout_constraintBottom_toTopOf="@+id/llConfirm"
        android:layout_marginTop="@dimen/dimen20dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"
        android:id="@+id/rvTextChoose"
        tools:listitem="@layout/item_text_choose_fill"
        tools:itemCount="12"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/llConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen10dp"
        android:layout_margin="@dimen/space_start_end"
        android:textSize="@dimen/text_size_16"
        android:gravity="center"
        android:fontFamily="@font/poppins_semi_bold"
        android:textAllCaps="false"
        android:backgroundTint="@color/color_button_06C270"
        android:background="@drawable/bg_linear_conner_radius"
        android:layout_marginBottom="@dimen/dimen20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal" >
        <com.wallet.pools.presentation.widget.TvSemiBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/confirm"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>