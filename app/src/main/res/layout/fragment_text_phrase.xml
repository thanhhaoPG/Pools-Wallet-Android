<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dimen30dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/space_start_end"
        tools:listitem="@layout/item_fill_text_phrase"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        android:background="@drawable/bg_radius_conner_gray"
        tools:itemCount="12"
        android:id="@+id/rvTextPhrase"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/space_start_end"
        app:layout_constraintTop_toBottomOf="@+id/rvTextPhrase"
        android:layout_marginTop="@dimen/dimen20dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"
        android:id="@+id/rvTextChoose"
        tools:listitem="@layout/item_text_choose_fill"
        tools:itemCount="12"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/llConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen10dp"
        android:layout_margin="@dimen/space_start_end"
        android:textSize="@dimen/text_size_16"
        android:gravity="center"
        android:fontFamily="@font/poppins_semi_bold"
        android:textAllCaps="false"
        android:backgroundTint="@color/color_button_06C270"
        android:background="@drawable/bg_linear_conner_radius"
        android:layout_marginBottom="@dimen/dimen20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal" >
        <com.wallet.pools.presentation.widget.TvSemiBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Confirm "/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>