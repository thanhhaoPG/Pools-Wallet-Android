<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_marginEnd="@dimen/space_start_end"
        android:id="@+id/rltTop"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <FrameLayout
            android:id="@+id/frmBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingHorizontal="@dimen/space_start_end">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dimen24dp"
                android:layout_height="@dimen/dimen24dp"
                app:tint="@color/black"
                android:layout_gravity="center"
                app:srcCompat="@drawable/baseline_keyboard_arrow_left_24" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/llTittle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="@dimen/dimen24dp"
                android:layout_height="@dimen/dimen24dp" />

            <com.wallet.pools.presentation.widget.TvMedium
                android:id="@+id/tvSymbolCoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="@dimen/dimen10dp"
                android:layout_toEndOf="@id/ivIcon"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                tools:text="BTC" />

            <com.wallet.pools.presentation.widget.TvRegular
                android:id="@+id/tvNameCoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/tvSymbolCoin"
                android:gravity="center_vertical"
                android:textColor="@color/color_text_484848"
                android:textSize="@dimen/text_size_12"
                tools:text="Bitcoin" />
        </LinearLayout>
    </RelativeLayout>

    <com.wallet.pools.presentation.widget.TvBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text_black"
        tools:text="100000dfdf"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="@dimen/space_start_end"
        android:layout_marginTop="@dimen/dimen10dp"
        app:layout_constraintTop_toBottomOf="@+id/rltTop"
        android:id="@+id/tvPrice"/>
    <com.wallet.pools.presentation.widget.TvLight
        android:id="@+id/tv1WeekTitle"
        android:textSize="@dimen/text_size_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text_black"
        tools:text="100000dfdf"
        app:layout_constraintStart_toEndOf="@id/tvPrice"
        android:layout_marginHorizontal="@dimen/space_start_end"
        android:layout_marginTop="@dimen/dimen10dp"
        app:layout_constraintTop_toBottomOf="@+id/rltTop"
        app:layout_constraintBottom_toBottomOf="@id/tvPrice"/>

    <com.tradingview.lightweightcharts.view.ChartsView
        android:id="@+id/chartsView"
        android:layout_width="match_parent"
        app:layout_constraintVertical_weight="1"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/space_start_end"
        app:layout_constraintTop_toBottomOf="@+id/tvPrice"
        app:layout_constraintBottom_toTopOf="@+id/llTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <LinearLayout
        android:id="@+id/llTv"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@id/llBuy"
        android:layout_marginBottom="@dimen/dimen20dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/llRow1"
            app:layout_constraintTop_toBottomOf="@+id/chartsView"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_marginVertical="@dimen/dimen5dp"
            android:layout_marginHorizontal="@dimen/space_start_end"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/dimen20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.wallet.pools.presentation.widget.TvRegular
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/string_1_hour"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/color_text_484848"
                    />
                <com.wallet.pools.presentation.widget.TvMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="28$"
                    android:id="@+id/tv1Hours"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.wallet.pools.presentation.widget.TvRegular
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/string_24_hour"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/color_text_484848"
                    />

                <com.wallet.pools.presentation.widget.TvMedium
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    tools:text="28$"
                    android:id="@+id/tv24Hours"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llRow2"
            app:layout_constraintTop_toBottomOf="@+id/llRow1"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_marginVertical="@dimen/dimen5dp"
            android:layout_marginHorizontal="@dimen/space_start_end"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/dimen20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.wallet.pools.presentation.widget.TvRegular
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/string_7_days"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/color_text_484848"
                    />
                <com.wallet.pools.presentation.widget.TvMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="28$"
                    android:id="@+id/tv7days"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.wallet.pools.presentation.widget.TvRegular
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/string_30_days"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/color_text_484848"
                    />
                <com.wallet.pools.presentation.widget.TvMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="28$"
                    android:id="@+id/tv30days"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llRow3"
            app:layout_constraintTop_toBottomOf="@+id/llRow2"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_marginVertical="@dimen/dimen5dp"
            android:layout_marginHorizontal="@dimen/space_start_end"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/dimen20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.wallet.pools.presentation.widget.TvRegular
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/string_60_days"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/color_text_484848"
                    />
                <com.wallet.pools.presentation.widget.TvMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="28$"
                    android:id="@+id/tv60days"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.wallet.pools.presentation.widget.TvRegular
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/string_90_days"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/color_text_484848"
                    />
                <com.wallet.pools.presentation.widget.TvMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="28$"
                    android:id="@+id/tv90days"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/space_start_end"
            android:layout_marginVertical="@dimen/dimen5dp"
            android:layout_height="wrap_content">
            <com.wallet.pools.presentation.widget.TvRegular
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/_24h_vol"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/color_text_484848"
                />
            <com.wallet.pools.presentation.widget.TvMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="28$"
                android:id="@+id/tv24hVol"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/text_size_12"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginVertical="@dimen/dimen5dp"
            android:layout_marginHorizontal="@dimen/space_start_end"
            android:layout_height="wrap_content">
            <com.wallet.pools.presentation.widget.TvRegular
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/volume_change_24h"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/color_text_484848"
                />
            <com.wallet.pools.presentation.widget.TvMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="28$"
                android:id="@+id/tvVolumeChange24"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/text_size_12"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginVertical="@dimen/dimen5dp"
            android:layout_marginHorizontal="@dimen/space_start_end"
            android:layout_height="wrap_content">
            <com.wallet.pools.presentation.widget.TvRegular
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Market Cap"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/color_text_484848"
                />
            <com.wallet.pools.presentation.widget.TvMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="28$"
                android:id="@+id/tvMarketCap"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/text_size_12"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
    android:id="@+id/llBuy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen15dp"
        android:layout_margin="@dimen/space_start_end"
    android:textSize="@dimen/text_size_16"
    android:gravity="center"
    android:fontFamily="@font/poppins_semi_bold"
    android:textAllCaps="false"
    android:backgroundTint="@color/color_button_06C270"
    android:background="@drawable/bg_radius_conner_gray"
    app:layout_constraintBottom_toBottomOf="parent"
    android:orientation="horizontal" >
    <com.wallet.pools.presentation.widget.TvSemiBold
        android:id="@+id/tvBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        tools:text="Buy BTC"/>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>