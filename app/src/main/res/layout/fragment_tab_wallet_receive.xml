       android:gravity="center"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_margin="@dimen/space_start_end"
       app:layout_constraintTop_toBottomOf="@id/llBack"
       android:orientation="vertical"
       android:backgroundTint="@color/color_E5F4EE"
       android:layout_height="wrap_content">
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">
          <ImageView
              android:layout_marginVertical="@dimen/dimen20dp"
              android:layout_marginHorizontal="@dimen/dimen20dp"
              android:layout_width="@dimen/dimen270dp"
              android:background="@color/black"
              android:layout_height="@dimen/dimen270dp"/>
