              android:layout_width="match_parent"
              android:layout_height="@dimen/dimen10dp"
              android:layout_marginHorizontal="@dimen/dimen20dp"
              android:background="@drawable/line_dotted"/>
          <LinearLayout
              android:layout_width="match_parent"
              android:orientation="horizontal"
              android:layout_margin="@dimen/dimen20dp"
              android:layout_height="wrap_content">
              <com.wallet.pools.presentation.widget.TvRegular
                  android:layout_width="wrap_content"
                  android:text="0x65459bd56f20koio9578259â€¨3E12C456677e"
                  android:textColor="@color/color_text_black"
                  android:layout_marginEnd="@dimen/dimen30dp"
                  android:layout_weight="1"
                  android:textSize="@dimen/text_size_14"
                  android:layout_height="wrap_content"/>
              <com.wallet.pools.presentation.widget.TvMedium
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Copy"
                  android:textSize="@dimen/text_size_14"
                  android:textColor="@color/color_text_black"/>
          </LinearLayout>
      </LinearLayout>
   </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share"
        android:padding="@dimen/dimen10dp"
        android:textSize="@dimen/text_size_16"
        android:fontFamily="@font/poppins_semi_bold"
        android:textAllCaps="false"
        android:layout_marginHorizontal="@dimen/space_start_end"
        android:background="@drawable/bg_linear_conner_radius_gray"
        android:layout_marginBottom="@dimen/dimen20dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>