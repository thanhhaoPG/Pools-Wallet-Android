<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/llBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/space_start_end"
        android:paddingVertical="@dimen/dimen15dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dimen11dp"
            android:layout_height="@dimen/dimen11dp"
            app:srcCompat="@drawable/iv_allow_green"
            />
        <com.wallet.pools.presentation.widget.TvRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Send POSI"
            android:textSize="@dimen/text_size_14"
            android:layout_toRightOf="@+id/ivBack"
            android:layout_marginStart="@dimen/dimen10dp"
            android:textColor="@color/color_text_06C270"/>
        <com.wallet.pools.presentation.widget.TvRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="BEP20"
            android:textSize="@dimen/text_size_14"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/dimen10dp"
            android:textColor="@color/color_text_484848"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/llCardViewBottom"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/llBack">
        <com.wallet.pools.presentation.widget.TvMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POSI"
            android:textColor="@color/color_text_484848"
            android:textSize="@dimen/text_size_12"/>
        <com.wallet.pools.presentation.widget.TvBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/color_text_484848"
            android:textSize="@dimen/text_size_40"/>
        <com.wallet.pools.presentation.widget.TvSemiBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0"
            android:textColor="@color/color_text_484848"
            android:textSize="@dimen/text_size_10"/>
        <LinearLayout
            android:layout_width="@dimen/dimen60dp"
            android:background="@drawable/bg_linear_conner_radius"
            android:backgroundTint="@color/color_F88805"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen20dp"
            android:layout_height="@dimen/dimen60dp">
            <com.wallet.pools.presentation.widget.TvMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max"
                android:textColor="@color/color_text_06C270"
                android:textSize="@dimen/text_size_12"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCardViewBottom"
        app:layout_constraintBottom_toTopOf="@+id/llConfirm"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginVertical="@dimen/dimen15dp"
        android:gravity="center"
        android:padding="@dimen/dimen15dp"
        android:backgroundTint="@color/color_bg_EEEEEE"
        android:background="@drawable/bg_linear_conner_radius_gray"
        android:layout_marginHorizontal="@dimen/space_start_end"
        android:layout_height="wrap_content">
        <com.google.android.material.circularreveal.CircularRevealLinearLayout
            android:layout_width="@dimen/dimen35dp"
            android:layout_height="@dimen/dimen35dp"
            android:src="@drawable/baseline_logo_dev_24"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/dimen5dp"
            android:layout_height="wrap_content">
            <com.wallet.pools.presentation.widget.TvRegular
                android:id="@+id/tvSymbolWallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MATIC"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/color_text_343434"/>
            <com.wallet.pools.presentation.widget.TvLight
                android:id="@+id/tvNameWallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Palygon"
                android:layout_below="@+id/tvSymbolWallet"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/color_text_757575"/>
            <com.wallet.pools.presentation.widget.TvRegular
                android:id="@+id/tvCountPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MATIC"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/color_text_212121"/>
            <com.wallet.pools.presentation.widget.TvLight
                android:id="@+id/tvCountMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Palygon"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tvCountPoint"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/color_text_9E9E9E"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen15dp"
        android:layout_marginTop="@dimen/text_size_10"
        android:textSize="@dimen/text_size_16"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/space_start_end"
        android:fontFamily="@font/poppins_semi_bold"
        android:textAllCaps="false"
        android:backgroundTint="@color/color_button_06C270"
        android:background="@drawable/bg_linear_conner_radius_gray"
        android:layout_marginBottom="@dimen/dimen20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal" >
        <com.wallet.pools.presentation.widget.TvSemiBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/white"
            android:text="Create PIN Code "/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>