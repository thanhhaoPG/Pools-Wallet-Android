<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_margin="@dimen/dimen10dp"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/llFillText"
        android:background="@drawable/bg_radius_conner"
        android:layout_width="@dimen/dimen100dp"
        android:backgroundTint="@color/color_06C270"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="@dimen/dimen5dp"
        android:layout_height="@dimen/dimen40dp">
        <com.wallet.pools.presentation.widget.TvRegular
        android:id="@+id/tvNumber"
            android:layout_marginVertical="@dimen/dimen10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text_black"
        tools:text="1."/>
        <TextView
            android:id="@+id/tvRecovery"
            android:layout_width="wrap_content"
            android:textColor="@color/color_text_black"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dimen10dp"
            tools:text="fdfdfdfd"/>
    </LinearLayout>
</LinearLayout>