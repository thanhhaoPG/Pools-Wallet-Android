<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.wallet.pools.presentation.widget.TvSemiBold
        android:id="@+id/tvTitle"
        android:layout_marginTop="@dimen/dimen10dp"
        android:text="@string/recovery"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/color_text_black"
       android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.wallet.pools.presentation.widget.TvRegular
        android:id="@+id/tvSubTitle"
        android:layout_marginTop="@dimen/dimen30dp"
        android:layout_marginHorizontal="@dimen/dimen50dp"
        android:text="Here are 12 recovery words and private key connected to your wallet,Store it securely and never share with anyone"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/color_text_484848"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@id/tvSubTitle"
        android:layout_marginTop="@dimen/dimen30dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/space_start_end"
        tools:listitem="@layout/item_recovery"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        android:backgroundTint="@color/color_06C270"
        android:padding="@dimen/dimen10dp"
        android:background="@drawable/bg_radius_conner"
        tools:itemCount="12"
        android:id="@+id/rvRecoveryText"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/llNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen15dp"
        android:layout_marginTop="@dimen/text_size_10"
        android:textSize="@dimen/text_size_16"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/space_start_end"
        android:fontFamily="@font/poppins_semi_bold"
        android:textAllCaps="false"
        android:backgroundTint="@color/color_button_06C270"
        android:background="@drawable/bg_linear_conner_radius_gray"
        android:layout_marginBottom="@dimen/dimen20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal" >
        <com.wallet.pools.presentation.widget.TvSemiBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:text="Next"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>