<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_06C270_enable"/>
            <corners android:radius="@dimen/dimen15dp"/>
        </shape>
    </item>
    <item android:state_enabled="true">
        <ripple android:color="@color/color_06C270_enable">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#3306C270"/>
                    <corners android:radius="@dimen/dimen15dp"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_06C270_disable"/>
            <corners android:radius="@dimen/dimen15dp"/>
        </shape>
    </item>
</selector>